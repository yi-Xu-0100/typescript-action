{
  "name": "@yi-xu-0100/typescript-action",
  "version": "0.0.1",
  "description": "Example GitHub action build in typescript.",
  "main": "lib/main.js",
  "types": "lib/main.d.ts",
  "private": false,
  "scripts": {
    "start": "npm run build && npm run coverage",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "build": "rimraf lib/src/ && tsc && npm run format",
    "coverage": "rimraf coverage/ && jest --coverage && npm run lint-check",
    "test": "jest && npm run lint-check",
    "clear": "rimraf lib/ coverage/",
    "format": "prettier --write \"**/*.{ts,md,json,yml,yaml}\"",
    "package": "ncc build --source-map --license licenses.txt",
    "lint-check": "tslint -p tsconfig.json && prettier --check \"**/*.{ts,md,json,yml,yaml}\"",
    "all": "npm run build && npm run package && npm run format && npm run package && npm run test",
    "all:coverage": "npm run build && npm run package && npm run format && npm run package && npm run coverage"
  },
  "lint-staged": {
    "**/*.{ts}": [
      "prettier --write",
      "git add",
      "tslint -p tsconfig.json"
    ],
    "**/*.{md,json,yml,yaml}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "coverageDirectory": "coverage",
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yi-Xu-0100/typescript-action.git"
  },
  "keywords": [
    "typescript",
    "github-action",
    "typescript-action",
    "workflows"
  ],
  "author": "yi-xu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yi-Xu-0100/typescript-action/issues"
  },
  "homepage": "https://github.com/yi-Xu-0100/typescript-action#readme",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.28",
    "@vercel/ncc": "^0.27.0",
    "copyfiles": "^2.4.1",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "pinst": "^2.1.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "@actions/core": "^1.2.6"
  }
}
